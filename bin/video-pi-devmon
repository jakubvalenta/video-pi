#!/bin/bash

set -euo pipefail

log_dir="$HOME/.local/share/video-pi"

mkdir -p "$log_dir"
video-pi-setup &> "$log_dir/video-pi.log"
devmon \
    --exec-on-drive "video-pi-stop; lxterminal --geometry=120x40 -e video-pi-play \"%d\"" \
    --exec-on-unmount video-pi-stop \
    --exec-on-remove video-pi-stop \
    --always-exec \
    --mount-options ro,noexec,nosuid,nodev,noatime \
    &> "$log_dir/video-pi.log"
